<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/jz_video_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="1.备注：这个是调用接口播放视频" />


            <cn.jzvd.CustomView.JZVideoPlayerStandardShowTitleAfterFullscreen
                android:id="@+id/jz_video_2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="2.备注：自定义全屏后显示表体控件" />


            <cn.jzvd.CustomView.JZVideoPlayerStandardShowTextureViewAfterAutoComplete
                android:id="@+id/jz_video_3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="3." />


            <cn.jzvd.CustomView.JZVideoPlayerStandardAutoCompleteAfterFullscreen
                android:id="@+id/jz_video_4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="18dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="4." />

            <cn.jzvd.CustomView.JZVideoPlayerStandardAutoCompleteAfterFullscreen
                android:id="@+id/video_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <cn.jzvd.CustomView.JZVideoPlayerStandardAutoCompleteAfterFullscreen
                android:id="@+id/video_16_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>